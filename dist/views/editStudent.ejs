      <script src="../validations/studentValidation.js"></script>
      <script>
        document.getElementById("editStudentForm").addEventListener("submit", async function(event) {
          event.preventDefault(); // Prevent the form from submitting the traditional way
      
          // Gather form data
          const formData = new FormData(this);
          const formObject = {};
          formData.forEach((value, key) => {
            formObject[key] = value;
          });
      
          try {
            const response = await fetch("/updateStudent?_id=<%=student._id%>", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify(formObject),
            });
      
            const result = await response.json();
      
            if (result.success) {
              // Display success SweetAlert
              Swal.fire({
                icon: "success",
                title: "Student updated!",
                text: "The student has been updated successfully.",
              });
      
              // Optionally, clear the form after success
              this.reset();
            } else {
              // Display error SweetAlert
              Swal.fire({
                icon: "error",
                title: "Error!",
                text: result.message || "There was an error updating the student.",
              });
            }
          } catch (error) {
            console.error("Error updating student:", error);
      
            // Display error SweetAlert
            Swal.fire({
              icon: "error",
              title: "Error!",
              text: "Something went wrong. Please try again later.",
            });
          }
        });
      </script>
