    <section id="hero" style="background-image:url(../assets/newimages/billboard-bg.png); background-repeat: no-repeat; ">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-6 pe-5 mt-5 mt-md-0">
            <div class="form-container">
              <h3>Update Student</h3>
              <form
                id="editStudentForm"
                action="/updateStudent?_id=<%=student._id%>"
                method="POST"
              >
                <div class="form-group">
                  <label>Name</label>
                  <input
                    class="form-control"
                    type="text"
                    value="<%=student.name%>"
                    name="name"
                    id="name"
                    oninput="validateName()"
                  />
                  <span
                    class="text-danger d-flex justify-content-center align-items-center"
                    id="nameError"
                  ></span>
                </div>
                <div class="form-group">
                  <label>Roll Number</label>
                  <input
                    class="form-control"
                    type="text"
                    value="<%=student.rollno%>"
                    name="rollno"
                    id="rollno"
                    oninput="validateRollNo()"
                  />
                  <span
                    class="text-danger d-flex justify-content-center align-items-center"
                    id="rollNoError"
                  ></span>
                </div>
                <div class="form-group">
                  <label>Date of Birth</label>
                  <input
                    class="form-control"
                    type="date"
                    value="<%=student.dob%>"
                    name="dob"
                    id="dob"
                    oninput="validateDOB()"
                  />
                  <span
                    class="text-danger d-flex justify-content-center align-items-center"
                    id="offerpriceError"
                  ></span>
                </div>
                <div class="form-group">
                  <label>Select Gender</label>
                  <select
                    class="form-control"
                    name="gender"
                    id="gender"
                    oninput="validateGender()"
                  >
                    <option value="<%=student.gender%>" disabled selected>
                      <%=student.gender%>
                    </option>
                    <option value="MALE">MALE</option>
                    <option value="FEMALE">FEMALE</option>
                    <option value="OTHERS">Others</option>
                  </select>
                  <span
                    class="text-danger d-flex justify-content-center align-items-center"
                    id="genderError"
                  ></span>
                </div>
        
                <div class="form-group">
                  <label>Email</label>
                  <input
                    class="form-control"
                    type="email"
                    value="<%=student.email%>"
                    name="email"
                    id="email"
                    oninput="validateEmail()"
                  />
                  <span
                    class="text-danger d-flex justify-content-center align-items-center"
                    id="emailError"
                  ></span>
                </div>
                <div class="form-group">
                  <label>Phone number</label>
                  <input
                    class="form-control"
                    type="number"
                    value="<%=student.phone%>"
                    name="phone"
                    id="phone"
                    oninput="validatePhone()"
                  />
                  <span
                    class="text-danger d-flex justify-content-center align-items-center"
                    id="phoneError"
                  ></span>
                </div>
                <div class="form-group">
                  <label>Select Course</label>
                  <select
                    class="form-control"
                    name="course"
                    id="course"
                    oninput="validateCourse()"
                  >
                    <option value="<%=student.course%>" disabled selected>
                      <%=student.course%>
                    </option>
                    <option value="BCA">BCA</option>
                    <option value="BCOM">BCOM</option>
                    <option value="OTHERS">Others</option>
                  </select>
                  <span
                    class="text-danger d-flex justify-content-center align-items-center"
                    id="courseError"
                  ></span>
                </div>
        
                <button type="submit" class="btn" id="submitButton">Submit</button>
              </form>
            <div>
              
    
            </div>
          </div>
          <div class="col-md-6 mt-5">
            <img src="../assets/newimages/billboard-img.jpg" alt="img" class="img-fluid">
          </div>
        </div>
      </div>
    
    </section>

    
